<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Copyright>© 2024</Copyright>
    <Company>Léo Corporation</Company>
    <Version>1.0.0.2407</Version>
    <RepositoryUrl>https://github.com/Leo-Corporation/InternetTestCLI</RepositoryUrl>
    <PublishSingleFile>true</PublishSingleFile>
    <AssemblyName>itcli</AssemblyName>
    <ApplicationIcon>InternetTest.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CliFx" Version="2.3.5" />
    <PackageReference Include="DnsClient" Version="1.8.0" />
    <PackageReference Include="PeyrSharp.Core" Version="2.1.0.2312" />
    <PackageReference Include="PeyrSharp.Env" Version="2.1.0.2312" />
    <PackageReference Include="RestSharp" Version="111.4.0" />
    <PackageReference Include="Whois" Version="3.0.1" />
  </ItemGroup>

  <PropertyGroup Condition="'$(OS)' == 'Windows_NT'">
    <DefineConstants>_WINDOWS</DefineConstants>
  </PropertyGroup>

</Project>